<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="devall_company" resource="default" engine="innodb" comment="Company">
        <column xsi:type="int" name="entity_id" padding="6" unsigned="true" nullable="false" identity="true" comment="entity id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="25" comment="Name"/>
        <column xsi:type="varchar" name="country" nullable="false" length="25" comment="country"/>
        <column xsi:type="varchar" name="street" nullable="false" length="255" comment="srteet"/>
        <column xsi:type="varchar" name="street_number" nullable="false" length="255" comment="street number"/>
        <column xsi:type="int" name="size" nullable="false" unsigned="false" comment="size"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
